class Shapes():
    def __init__(self, name, area):
        self.area = area
        self.name = name

    def information(self):
        print("Name: ", self.name, "Area: ", self.area)


class rectangle(Shapes):
    def __init__(self, name, area,side):
        Shapes.__init__(self,name,area)
        self.side = side
        otherSide = area/side

rectangle1 = rectangle("rectangle 1",24,12)

rectangle1.information()
