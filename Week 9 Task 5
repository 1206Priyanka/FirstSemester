# defining the main where the program asks for an input from the user.
# Then prints out the value of spaces

def main():
    userInput = input("Enter something\n")
    print(count_spaces(userInput))

#function called count_spaces where the number of spaces is calculated.

def count_spaces(userInput):
    spaces = 0  
    for char in userInput : 
        if char == " ":  
            spaces = spaces + 1
    return spaces
    
main()
